{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2021", "DOM", "DOM.Iterable", "WebWorker"],
    "types": ["chrome"],
    "strict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "include": [
    "content-script/**/*.ts",
    "page-worms/**/*.ts",
    "popup-logic/**/*.ts",
    "service-worker/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
